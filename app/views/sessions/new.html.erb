<h1>Sign in</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<%= form_for(:session, :url => sessions_path) do |f| %>
  
  <div class="field" >
    <%= f.label :email %> 
    <%= f.text_field :email %>
  </div>
  
  <div class="actions" >
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? Click <%= link_to "sign up here", signup_path %></p>

